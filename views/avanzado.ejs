<%

 



 %>


%>

<table  class="table table-bordered table-striped text-center mt-4" style="font-family: monospace;">
  
  <thead style="background-color:#ff9900;color:#fff;font-size: 20px;">
    <tr>
      <th>ID</th>
      <th>Fecha</th>
      <th>Feria</th>
      <th>Combustible</th>
      <th>Alquileres</th>
      <th>Luz</th>
      <th>Empleados</th>
      <th>Ventas</th>

      <th><a>Acciones</a></th>
    </tr>
  </thead>
  <tbody>
    
      <% 

      var feria = 0; 
      var combustible = 0; 
      var alquileres = 0; 
      var luz = 0;
      var empleados = 0; 
      var ventas = 0;
      var feriaCTA = 0; 
      var combustibleCTA = 0; 
      var alquileresCTA = 0; 
      var luzCTA = 0;
      var empleadosCTA = 0; 
      var ventasCTA = 0;
    

       %>
      <% results.forEach((sic)=>{

        

      %>
          <tr>
               <td id="td"><%= sic.id %></td>
               <td id="td"><%= sic.fecha %></td>
               <td id="td"><%= sic.feria %></td>
               <td id="td"><%= sic.combustible %></td>
               <td id="td"><%= sic.alquileres %></td>
               <td id="td"><%= sic.luz %></td>
               <td id="td"><%= sic.empleados %></td>
               <td id="td"><%= sic.ventas %></td>
                <td>
                      <a href="/edit/<%=sic.id %>" class="btn btn-outline-info">editar</a>
                      <a href="/delete/<%=sic.id %>" class="btn btn-outline-danger">borrar</a>

               </td>
          </tr>
      <% 
         
            feria += sic.feria;

            combustible += sic.combustible;
            alquileres += sic.alquileres;
            luz += sic.luz;
            empleados += sic.empleados;
            ventas += sic.ventas;

             if(sic.feria != 0){
              feriaCTA += 1;
             }
             if(sic.combustible != 0){
              combustibleCTA += 1;
             }
             if(sic.alquileres != 0){
              alquileresCTA += 1;
             }
             if(sic.luz != 0){
              luzCTA += 1;
             }
             if(sic.empleados != 0){
              empleadosCTA += 1;
             }
             if(sic.ventas != 0){
              ventasCTA += 1;
             }

              

        }) 


      %>

     <tr>
      <td id="td" style="font-weight: 800;">Total</td>
      <td id="td" style="font-weight: 800;color:#ff9900;">[Actividad]</td>
      <td id="td" style="font-weight: 800;"><span style="color:#ff9900;">[<%= feriaCTA %>]</span>  $ <%= feria %></td>
      <td id="td" style="font-weight: 800;"><span style="color:#ff9900;">[<%= combustibleCTA %>]</span>  $ <%= combustible %></td>
      <td id="td" style="font-weight: 800;"><span style="color:#ff9900;">[<%= alquileresCTA %>]</span>  $ <%= alquileres %></td>
      <td id="td" style="font-weight: 800;"><span style="color:#ff9900;">[<%= luzCTA %>]</span>  $ <%= luz %></td>
      <td id="td" style="font-weight: 800;"><span style="color:#ff9900;">[<%= empleadosCTA %>]</span>   $ <%= empleados %></td>
      <td id="td" style="font-weight: 800;"><span style="color:#ff9900;">[<%= ventasCTA %>]</span>   $ <%= ventas %></td>
      <td></td>
    </tr>

  </tbody>
</table>

 

 
